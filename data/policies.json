[
  {
    "id": 1,
    "name": "Credit Card Detection",
    "description": "Detect credit card numbers in files",
    "status": "active",
    "type": "pattern",
    "severity": "high",
    "created": "2024-01-15",
    "last_modified": "2024-01-20",
    "rules": {
      "patterns": [
        "\\d{4}-\\d{4}-\\d{4}-\\d{4}",
        "\\d{16}"
      ]
